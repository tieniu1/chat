.border,
.nav,
.nav_item,
.conversation-x,
.input-x {
  border: 1px solid;
  border-radius: 3px;
}
.box {
  display: flex;
  width: 100%;
  height: 100%;
  padding-bottom: 10px;
}
.nav {
  width: 130px;
  padding: 5px;
  visibility: hidden;
}
.nav_item {
  display: flex;
  line-height: 30px;
  justify-content: space-between;
  padding: 0 5px;
  margin-bottom: 5px;
}
.nav_item .nav_item_text {
  font-size: 14px;
}
.main {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  margin: 0 10px;
}
.title {
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.conversation-x {
  flex: 1;
  min-height: 400px;
  margin-bottom: 20px;
}
.conversation_item {
  display: flex;
  padding: 20px;
  gap: 10px;
}
.conversation_item .avatar {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  background: #ccc;
}
.conversation_item .chat {
  width: 80%;
  line-height: 20px;
  border-radius: 5px;
}
.conversation_item-left .chat {
  background: #ccc;
}
.conversation_item-right {
  flex-direction: row-reverse;
}
.conversation_item-right .avatar {
  background: #337499;
}
.conversation_item-right .chat {
  background: #337499;
}
.input-x {
  display: flex;
  padding-right: 10px;
}
.input {
  flex: 1;
  padding: 5px;
  min-height: 30px;
}
.input:focus-visible {
  outline: none;
}
.send {
  color: green;
  font-size: 26px;
  display: flex;
  align-items: flex-end;
}
